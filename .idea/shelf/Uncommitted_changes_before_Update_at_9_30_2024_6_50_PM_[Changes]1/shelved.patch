+package project.autox;
+
+import javafx.fxml.FXML;
+import javafx.scene.control.Button;
+import javafx.scene.control.TextField;
+import javafx.scene.text.Text;
+
+import java.util.HashMap;
+import java.util.Map;
+
+public class TMController {
+
+    private static int currentState = 0; // Initial state q0
+    private StringBuilder tape; // Represents the input tape
+    private int headPosition; // Current position of the head
+
+    @FXML
+    private TextField Input_Tape; // Input field for the tape
+    @FXML
+    private Button Validate_TM; // Button to validate input
+    @FXML
+    private Button Simulate_TM; // Button to simulate the Turing Machine
+    @FXML
+    private Text regexAccepted; // Text for accepted regular expression
+    @FXML
+    private Text languageAccepted; // Text for accepted language
+
+    // Transition table: Map of current state and input to next state and tape action
+    private Map<String, String[]> transitionTable;
+
+    public TMController() {
+        // Initialize the transition table
+        transitionTable = new HashMap<>();
+        // Define transitions according to the regular expression 0+ c 0+
+        transitionTable.put("0,0", new String[]{"0", "0", "R"}); // q0 on 0 -> q0, write 0, move right
+        transitionTable.put("0,c", new String[]{"1", "c", "R"}); // q0 on 'c' -> q1, write 'c', move right
+        transitionTable.put("1,0", new String[]{"1", "0", "R"}); // q1 on 0 -> q1, write 0, move right
+        transitionTable.put("1,blank", new String[]{"2", "blank", "L"}); // q1 on blank (end of input) -> q2, move left
+        transitionTable.put("2,0", new String[]{"2", "0", "L"}); // q2 on 0 -> q2, write 0, move left
+        transitionTable.put("2,c", new String[]{"3", "c", "R"}); // q2 on 'c' -> q3, write 'c', move right
+        transitionTable.put("3,0", new String[]{"3", "0", "R"}); // q3 on 0 -> q3, write 0, move right
+        transitionTable.put("3,blank", new String[]{"4", "blank", "S"}); // q3 on blank -> q4 (accepting state)
+    }
+
+    public void initialize() {
+        Validate_TM.setOnAction(event -> {
+            String input = Input_Tape.getText().trim();
+            tape = new StringBuilder(input.replaceAll(" ", "") + " blank"); // Set the tape with a blank at the end
+            headPosition = 0; // Reset head position
+            currentState = 0; // Reset state
+
+            boolean isAccepted = simulate();
+            if (isAccepted) {
+                System.out.println("The input is accepted by the Turing Machine.");
+            } else {
+                System.out.println("The input is rejected by the Turing Machine.");
+            }
+        });
+
+        Simulate_TM.setOnAction(event -> {
+            // Additional logic for step-by-step simulation can be implemented here
+            System.out.println("Step-by-step simulation not implemented yet.");
+        });
+
+        // Set texts for regular expressions and accepted language
+        regexAccepted.setText("0+ c 0+");
+        languageAccepted.setText("{ 0^m c 0^n | m, n â‰¥ 1 }");
+    }
+
+    public boolean simulate() {
+        while (headPosition < tape.length()) {
+            char currentSymbol = tape.charAt(headPosition);
+            String key = currentState + "," + (currentSymbol == ' ' ? "blank" : currentSymbol); // Use 'blank' for empty space
+
+            // Check for a valid transition
+            if (transitionTable.containsKey(key)) {
+                String[] action = transitionTable.get(key);
+                currentState = Integer.parseInt(action[0]); // Update current state
+                // Write to the tape (considering 'blank' as space for end)
+                tape.setCharAt(headPosition, action[1].equals("blank") ? ' ' : action[1].charAt(0));
+                headPosition += action[2].equals("R") ? 1 : (action[2].equals("L") ? -1 : 0); // Move head right, left, or stay
+            } else {
+                return false; // No valid transition, reject the input
+            }
+        }
+
+        // Accept if the machine halts in an accepting state (for simplicity, let's assume state 4 is accepting)
+        return currentState == 4;
+    }
